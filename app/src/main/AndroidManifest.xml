<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chukslabs.trical">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.courses.CoursesListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.courses.add.AddCourseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.courses.detail.CourseDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.exams.AddExamsActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>