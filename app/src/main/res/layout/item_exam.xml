<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/exam_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_exam_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:padding="@dimen/dimen_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Examen"/>

        <TextView
            android:id="@+id/item_exam_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/white"
            android:gravity="end"
            android:padding="@dimen/dimen_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryDark"
            tools:text="20.00"/>

    </LinearLayout>

    <View
        android:id="@+id/exams_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/generalBackground"/>

    <ImageView
        android:id="@+id/exam_name_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3"
        android:background="@drawable/background_grades_top"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/grades_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"/>

</LinearLayout>